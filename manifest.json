{
    "name": "DJH拡張機能[再生曲送信]",
    "description": "現在の再生しているYouTubeのURLでDJIに送信する。",
    "version": "1.3.0",
    "manifest_version": 3,
    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": ["content_script.js"]
    }],
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icom.png",
        "48": "icom.png",
        "128": "icom.png"
    },
    "action": {
        "default_popup": "index.html"
    }
}
